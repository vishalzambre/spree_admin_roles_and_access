source 'https://rubygems.org'

branch = ENV.fetch('SOLIDUS_BRANCH', 'master')
gem 'solidus', '~> 1.2.2'
# Provides basic authentication functionality for testing parts of your engine
gem 'solidus_auth_devise', '~> 1.2.2'

# Spree Internationalization https://github.com/solidusio-contrib/solidus_i18n
gem 'solidus_i18n', '~> 1.0.0'
gem 'solidus_globalize', github: 'solidusio-contrib/solidus_globalize', branch: branch

