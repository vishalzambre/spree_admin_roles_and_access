<div class="alert alert-info"><%= Spree.t(:permission_set_admin_permission_required) %></div>

<div data-hook="admin_permission_set_form_fields">
  <div data-hook="admin_permission_set_form_fields_left" class="six columns alpha">
    <%= f.field_container :name do %>
      <%= f.label :name, Spree.t(:permission_set_name) %><span class="required">*</span>
      <%= f.text_field :name, class: 'fullwidth', placeholder: 'Name of the permission set', required: true %>
      <%= f.error_message_on :name, class: 'help-block' %>
    <% end %>

    <%= f.field_container :display_permission do %>
      <%= f.label :display_permission do %>
        <%= f.check_box :display_permission %>
        <%= Spree.t(:permission_set_display_permission) %>
        <div class="tooltip">
          <i class="fa fa-info-circle" aria-hidden="true"></i>
          <span class="tooltiptext">
            <%= Spree.t(:permission_set_display_permission_help) %>
          </span>
        </div>
      <% end %>
    <% end %>
  </div>

  <div data-hook="admin_permission_set_form_fields_right" class="omega five columns">
    <%= f.field_container :description do %>
      <%= f.label :description, Spree.t(:permission_set_description) %><span class="required">*</span>
      <%= f.text_area :description, class: 'fullwidth', placeholder: 'This permission set allows the role to...', required: true %>
      <%= f.error_message_on :description, class: 'help-block' %>
    <% end %>
  </div>

  <div data-hook="permission_set_permissions" class="alpha twelve columns">
    <%= f.field_container :permission_ids do %>
      <%= f.label :permission_ids, Spree.t(:permission_set_permissions) %><span class="required">*</span>
      <div class="tooltip">
        <i class="fa fa-info-circle" aria-hidden="true"></i>
        <span class="tooltiptext">
          <%= Spree.t(:permission_set_permissions_help) %>
        </span>
      </div>
      <%= f.select :permission_ids, select_options_for_permissions(@permissions, f.object.permission_ids), { include_blank: true }, { class: "select2 fullwidth", multiple: :multiple, required: true } %>
      <%= f.error_message_on :permission_ids %>
    <% end %>
  </div>
  <div data-hook="additional_permission_fields"></div>
</div>
<div class="clearfix"></div>
